{
  "manifest_version": 3,
  "name": "Slidevim",
  "version": "0.1.0",
  "description": "Bidirectional sync between Neovim and sli.dev slides",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3030/*",
        "http://localhost:3031/*",
        "http://localhost:3032/*",
        "http://localhost:3033/*",
        "http://localhost:3034/*",
        "http://localhost:3035/*",
        "http://localhost:3036/*",
        "http://localhost:3037/*",
        "http://localhost:3038/*",
        "http://localhost:3039/*",
        "http://127.0.0.1:3030/*",
        "http://127.0.0.1:3031/*",
        "http://127.0.0.1:3032/*",
        "http://127.0.0.1:3033/*",
        "http://127.0.0.1:3034/*",
        "http://127.0.0.1:3035/*",
        "http://127.0.0.1:3036/*",
        "http://127.0.0.1:3037/*",
        "http://127.0.0.1:3038/*",
        "http://127.0.0.1:3039/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}
